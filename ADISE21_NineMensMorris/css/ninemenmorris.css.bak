#nmm_board{
    display: flex;
    justify-content: center;
}

#nmm_board table{
    border: 1px solid black;
}

#nmm_table TD {
    width: 50px;
    height: 50px;
    text-align:center;
    padding: 0;
}

#nmm_table {border-collapse: collapse;}

TD.g_square{
    background-color:#fff0c1;
}

TD.r_square{
    background-color:#fff0c1;
}

#howtoplay{
	text-align: center;
	margin-top: -15px;
	margin-bottom: 15px;
}

#howtoplayheader{
    display: flex;
    justify-content: center;
	text-align: center;
	margin-top: 10px;
	font-size: 22px;
	font-weight: bold;
}

#htpwrapper{
	width: 100%;
	text-align: center;
	border: groove;
	margin-top: 10px;
	border-color: aquamarine;
	background-color: whitesmoke;
}

